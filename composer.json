{
    "name": "cryptome-ai/cryptome-pay-php",
    "description": "Official PHP SDK for Cryptome Pay - Multi-chain cryptocurrency payment gateway",
    "type": "library",
    "keywords": [
        "cryptomepay",
        "cryptocurrency",
        "payment",
        "usdt",
        "trc20",
        "bsc",
        "polygon",
        "ethereum",
        "arbitrum",
        "blockchain"
    ],
    "homepage": "https://github.com/cryptome-ai/cryptome-pay-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Cryptome AI",
            "email": "dev@cryptomepay.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-curl": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5|^10.0",
        "php-mock/php-mock-phpunit": "^2.6"
    },
    "autoload": {
        "psr-4": {
            "CryptomePay\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CryptomePay\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-text"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
